{
    "$schema": "https://json.schemastore.org/electron-builder.json",

    "appId": "ocs.enncy.cn",
    "productName": "ocs",
    "asar": false,
    "copyright": "Copyright © 2021 ${author}",
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true
    },
    "win": {
        "icon": "public/favicon.ico",
        "artifactName": "${productName}-${version}-setup-${os}-${arch}.${ext}",
        "target": [
            {
                "target": "nsis",
                "arch": ["ia32", "x64"]
            }
        ]
    },
    "mac": {
        "icon": "public/favicon.ico",
        "artifactName": "${productName}-${version}-setup-${os}-${arch}.${ext}",
        "target": "default"
    },
    "fileAssociations": {
        "ext": "ocs",
        "icon": "public/favicon.ico",
        "name": "ocs 脚本"
    }
}
