{
    "$schema": "https://json.schemastore.org/electron-builder.json",
    "appId": "ocs.enncy.cn",
    "productName": "ocs",
    "asar": false,
    "copyright": "Copyright Â© 2021 ${author}",
    // "afterAllArtifactBuild": "./lib/electron/after-pack.js",
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true
    },
    "win": {
        "icon": "public/favicon.ico",
        "artifactName": "${productName}-${version}-setup-${os}-${arch}.${ext}",
        "target": [
            {
                "target": "nsis",
                "arch": ["ia32", "x64"]
            }
        ]
    },
    "mac": {
        "icon": "public/favicon.ico",
        "artifactName": "${productName}-${version}-setup-${os}-${arch}.${ext}",
        "target": "default"
    }
}
