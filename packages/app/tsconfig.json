{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./lib",
		"declaration": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist", "extensions", "**/*.spec.ts", "**/*.d.ts"]
}
